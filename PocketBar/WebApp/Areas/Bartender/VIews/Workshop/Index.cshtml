
@{
    ViewData["Title"] = @App.Resources.Areas.Bartender.Workshop.Index.HeadTitle;
}


<div class="intro bg-image vh-100 shadow-1-strong">
    <video playsInline autoPlay muted loop>
        <source class="h-100" src="~/assets/videos/landing-bar.mp4" type="video/mp4"/>
    </video>
</div>

<div class="wrapper">
    <h1 class="mb-3 text-center">Pocket Bar</h1>
    <div class="container d-flex align-items-center justify-content-center text-center h-100">
        <div class="text-white">
            <h5 class="mb-4">@App.Resources.Areas.Bartender.Workshop.Index.PageDescriptionOne</h5>
            <h5 class="mb-4">@App.Resources.Areas.Bartender.Workshop.Index.PageDescriptionTwo :)</h5>
        </div>
    </div>
</div>


<style scoped>

    /* Fancy Bartender Video On Background */

    video {
        min-width: 100%;
        min-height: 100%;
    }

    .intro {
        height: 100vh;
        overflow: hidden;
    }

    /* Logo, Introduction Text And Action Buttons */
    h1 {
        top: 0;
        font-size: 60px;
        font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    }

    h5 {
       font-size: 30px;
    }

    .wrapper {
        position: fixed;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        color: #f1f1f1;
        height: 100vh;
        width: 100%;
        padding: 20px;
    }
    
</style>